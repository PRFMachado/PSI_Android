<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FaturaActivity">

    <ImageView
        android:id="@+id/ivLogoFatura"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/descriptionLogo"
        android:src="@drawable/ic_action_faturas" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/lvFatura"
        android:layout_width="match_parent"
        android:layout_height="550dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonPerfilFatura"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="@string/nav_Pessoal"
            android:src="@drawable/ic_action_pessoal" />

        <ImageButton
            android:id="@+id/imageButtonCarrinhoFatura"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="@string/nav_carrinho"
            android:src="@drawable/ic_action_carrinho" />

        <ImageButton
            android:id="@+id/imageButtonFavoritoFatura"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="@string/nav_favoritos"
            android:src="@drawable/ic_action_favorito" />
    </LinearLayout>

</LinearLayout>