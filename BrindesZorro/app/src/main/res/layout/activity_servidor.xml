<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".ServidorActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivServidor"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:contentDescription="@string/descriptionLogo"
        app:srcCompat="@drawable/conection" />

    <TextView
        android:id="@+id/tvServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_servidorNome"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPortoServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tv_portaTitulo"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPortoServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/hint_porta"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tvIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tv_tituloIp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/hint_ip"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tvDominioServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tv_dominioTitulo"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDominioServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/hint_dominio"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirmarServidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="@string/btn_Confirmar" />
    </LinearLayout>

</LinearLayout>