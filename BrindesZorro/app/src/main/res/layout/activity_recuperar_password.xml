<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context=".EditarDadosPessoaisActivity">

    <ImageView
        android:id="@+id/ivServidor"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:contentDescription="@string/descriptionLogo"
        app:srcCompat="@drawable/logosemfundo" />

    <TextView
        android:id="@+id/tvPortoServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tvInsiraUser"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPortoServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/hint_userName"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tvIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/tvPedirEmail"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etIpServidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/hint_userEmail"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelarRegistar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Canceler"
            android:text="@string/textCancelar" />

        <Button
            android:id="@+id/buttonConfirmarServidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textRecuperar" />
    </LinearLayout>

</LinearLayout>